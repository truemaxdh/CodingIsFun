<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pgmaru.pentix" version="1.0.30" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CrayonPentix</name>
    <description>
        A sample Pentix game
    </description>
    <author email="pgrim.maru@gmail.com" href="http://truemaxdh.github.io">
        Pulgrimmaru
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="icon.png" />
     <platform name="android">
        <icon src="icon.png" density="ldpi" />
        <icon src="icon.png" density="mdpi" />
        <icon src="icon.png" density="hdpi" />
        <icon src="icon.png" density="xhdpi" />
        
    <!-- you can use any density that exists in the Android project -->
    
    <splash src="icon.png" density="hdpi"/>
    <splash src="icon.png" density="ldpi"/>
    <splash src="icon.png" density="mdpi"/>
    <splash src="icon.png" density="xhdpi"/>

    <splash src="icon.png" density="port-hdpi"/>
    <splash src="icon.png" density="port-ldpi"/>
    <splash src="icon.png" density="port-mdpi"/>
    <splash src="icon.png" density="port-xhdpi"/>

     </platform>
<preference name="SplashScreenDelay" value="10000" />
</widget>
