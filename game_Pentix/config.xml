<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pgmaru.SimplePentix" version="1.0.16" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SimplePentix</name>
    <description>
        A sample Pentix game
    </description>
    <author email="pgrim.maru@gmail.com" href="http://truemaxdh.github.io">
        Pulgrimmaru
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-game" source="npm" >
        <param name="APP_ID" value="816297656629" />
    </plugin>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="icon.png" />
</widget>
